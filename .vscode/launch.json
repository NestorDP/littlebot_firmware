"version": "0.2.0",
  "configurations": [
      {
        "cwd": "${workspaceRoot}",
        "executable": "${workspaceRoot}/image.elf",
        "name": "Debug Microcontroller",
        "request": "launch",
        "type": "cortex-debug",
        "servertype": "openocd",
        "serverpath": "openocd",
        "configFiles": ["/usr/local/share/openocd/scripts/board/ti_ek-tm4c123gxl.cfg"],
        "gdbTarget": "localhost:3333",
        "rtos": "FreeRTOS",
        // "device": "",
        // "interface": "",
        "showDevDebugOutput": "raw",
        "runToMain": true
      }
  ]
}